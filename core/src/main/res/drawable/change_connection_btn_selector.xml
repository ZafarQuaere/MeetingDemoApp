<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="false">
        <bitmap android:gravity="center_vertical|center_horizontal" android:src="@drawable/change_connection_btn" />
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <bitmap android:gravity="center_vertical|center_horizontal" android:src="@drawable/change_connection_btn_pressed" />
    </item>
    <item android:state_enabled="false">
        <bitmap android:gravity="center_vertical|center_horizontal" android:src="@drawable/change_connection_btn_disabled" />
    </item>
</selector>