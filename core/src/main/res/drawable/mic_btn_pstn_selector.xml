<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_enabled="true" android:state_pressed="false">
        <layer-list>
            <item android:height="@dimen/dp_56" android:width="@dimen/dp_56" >
                <shape android:shape="oval">
                    <solid android:color="@color/warn_color_600"/>
                </shape>
            </item>
            <item android:gravity="center_vertical|center_horizontal" android:drawable="@drawable/ic_mic_off">
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true" android:state_enabled="true" android:state_pressed="true">
        <layer-list>
            <item android:height="@dimen/dp_56" android:width="@dimen/dp_56" >
                <shape android:shape="oval">
                    <solid android:color="@color/warn_color_800"/>
                </shape>
            </item>
            <item android:gravity="center_vertical|center_horizontal" android:drawable="@drawable/ic_mic_off">
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true" android:state_enabled="false">
        <layer-list>
            <item android:height="@dimen/dp_56" android:width="@dimen/dp_56" >
                <shape android:shape="oval">
                    <solid android:color="@color/mic_btn_color_light_gray"/>
                </shape>
            </item>
            <item android:gravity="center_vertical|center_horizontal" android:drawable="@drawable/ic_connecting_audio_mic"/>
        </layer-list>
    </item>

    <item android:state_checked="false" android:state_enabled="true" android:state_pressed="false">
        <layer-list>
            <item android:height="@dimen/dp_56" android:width="@dimen/dp_56" >
                <shape android:shape="oval">
                    <solid android:color="@color/accent_color_400"/>
                </shape>
            </item>
            <item android:gravity="center_vertical|center_horizontal" android:drawable="@drawable/ic_mic">
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false" android:state_enabled="true" android:state_pressed="true">
        <layer-list>
            <item android:height="@dimen/dp_56" android:width="@dimen/dp_56" >
                <shape android:shape="oval">
                    <solid android:color="@color/accent_color_700"/>
                </shape>
            </item>
            <item android:gravity="center_vertical|center_horizontal" android:drawable="@drawable/ic_mic">
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false" android:state_enabled="false">
        <layer-list>
            <item android:width="@dimen/dp_56" android:height="@dimen/dp_56" android:gravity="center_vertical|center_horizontal" android:drawable="@drawable/audiomeeting_mute_disabled" />
        </layer-list>
    </item>
</selector>