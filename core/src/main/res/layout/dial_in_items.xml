<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/dial_in_list_item_bottom_margin">

    <TextView
        android:id="@+id/tv_cntry_prmry_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_14_sp"
        android:fontFamily="sans-serif"
        android:layout_below="@+id/tv_phone_number"
        android:layout_toRightOf="@+id/rb_num_checked"
        android:textStyle="normal"
        android:layout_marginStart="@dimen/margin_20_dp"
        android:textColor="@color/grayMedium"
        android:lineSpacingExtra="-22sp"
        android:text="@string/primary_access_number"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingEnd="@dimen/dial_in_prmry_num_padding_end"/>

    <TextView
        android:id="@+id/tv_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20_dp"
        android:layout_toRightOf="@+id/rb_num_checked"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="-38sp"
        android:maxLines="1"
        android:textColor="@color/grayDark"
        android:textSize="@dimen/margin_16sp"
        android:textStyle="normal" />

    <RadioButton
        android:id="@+id/rb_num_checked"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:drawableTint="@color/voice_mail_blue"
        android:theme="@style/RadioButtonStyle"
        android:layout_marginStart="@dimen/margin_20_dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignParentLeft="true" />
</RelativeLayout>