<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/meeting_guest_list_header_background_color">

    <TextView
        android:id="@+id/textChatLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="@dimen/xsmall_text"
        android:paddingHorizontal="@dimen/margin_15_dp"
        android:paddingVertical="@dimen/margin_10_dp"
        android:text="@string/tab_text_chat"
        android:textColor="@color/participant_name_color"
        android:textSize="@dimen/xxmedium_text"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textChatCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textChatLabel"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="@dimen/xsmall_text"
        android:gravity="center"
        android:text="1"
        android:background="@drawable/bg_circle_dark"
        android:textColor="@color/feedback_button_bg"
        android:textSize="@dimen/participant_type_text_size"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/margin_10_dp">

        <ImageView
            android:id="@+id/ivAddChat"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/margin_20_dp"
            android:scaleType="fitCenter"
            android:background="@drawable/ic_add" />

        <ImageView
            android:id="@+id/img_chat_menu_icon"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginEnd="@dimen/margin_20_dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_chat_menu"
            android:visibility="visible" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/ivCancelFragment"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_15_dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_warn_close" />
    </LinearLayout>

</RelativeLayout>