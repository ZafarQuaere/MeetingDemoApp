<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_empty_guest_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:visibility="visible"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_pic_empty_guest_list"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/margin_8_dp"
        android:layout_marginBottom="@dimen/margin_8_dp"
        android:layout_marginStart="@dimen/margin_16_dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/avatar" />

    <TextView
        android:id="@+id/tv_empty_guest_list_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/margin_16_dp"
        android:layout_marginRight="@dimen/margin_16_dp"
        android:layout_toRightOf="@id/profile_pic_empty_guest_list"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:layout_centerVertical="true"
        android:textColor="@color/overflow_menu_text_color"
        android:text="@string/no_waiting_room_guest_msg"
        android:textSize="@dimen/medium_text"/>

    <View style="@style/listDividerVertical"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>