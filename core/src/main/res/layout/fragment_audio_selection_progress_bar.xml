<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shimmer_view_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_home"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/btn_close_shimmer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:clickable="true"
        android:elevation="@dimen/margin_10_dp"
        android:focusable="true"
        android:padding="@dimen/margin_16_dp"
        android:src="@drawable/connect_xbtn" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical">

        <Button
            android:id="@+id/btn_simmer_donot_connect"
            android:layout_width="match_parent"
            android:layout_height="@dimen/audio_selection_dnt_cnct_btn_btm_height"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/audio_selection_audio_cnfrm_msg_margin_start"
            android:layout_marginEnd="@dimen/audio_selection_audio_cnfrm_msg_margin_end"
            android:layout_marginBottom="@dimen/audio_selection_dnt_cnct_btn_btm_margin"
            android:background="@color/grayLight" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btn_simmer_donot_connect"
            android:layout_marginTop="@dimen/baseToolbarHeight"
            android:foregroundGravity="center"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_simmer_audio_cnfrm_msg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/audio_selection_dnt_cnct_btn_btm_height"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/audio_selection_audio_cnfrm_msg_margin_start"
                android:layout_marginEnd="@dimen/audio_selection_audio_cnfrm_msg_margin_end"
                android:layout_marginBottom="@dimen/audio_selection_audio_cnfrm_msg_margin_btm"
                android:background="@color/grayLight" />

            <TextView
                android:id="@+id/tv_simmer_audio_cnfrm_msg_second"
                android:layout_width="match_parent"
                android:layout_height="@dimen/audio_selection_dnt_cnct_btn_btm_height"
                android:layout_below="@+id/tv_simmer_audio_cnfrm_msg"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/audio_selection_audio_cnfrm_msg_margin_start"
                android:layout_marginEnd="@dimen/audio_selection_audio_cnfrm_msg_margin_end"
                android:layout_marginBottom="@dimen/audio_selection_audio_cnfrm_msg_margin_btm"
                android:background="@color/grayLight" />

            <TextView
                android:id="@+id/tv_simmer_audio_cnfrm_msg_third"
                android:layout_width="match_parent"
                android:layout_height="@dimen/audio_selection_dnt_cnct_btn_btm_height"
                android:layout_below="@+id/tv_simmer_audio_cnfrm_msg_second"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/audio_selection_audio_cnfrm_msg_margin_start"
                android:layout_marginEnd="@dimen/about_weather_by_margin_top"
                android:layout_marginBottom="@dimen/audio_selection_audio_cnfrm_msg_margin_btm"
                android:background="@color/grayLight" />

            <Button
                android:id="@+id/simmer_connect_voip_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/audio_selection_btn_height"
                android:layout_below="@+id/tv_simmer_audio_cnfrm_msg_third"
                android:layout_marginStart="@dimen/audio_selection_audio_cnfrm_msg_margin_start"
                android:layout_marginTop="@dimen/audio_selection_layout_margin"
                android:layout_marginEnd="@dimen/audio_selection_audio_cnfrm_msg_margin_end"
                android:layout_marginBottom="@dimen/margin_5_dp"
                android:background="@color/grayLight"
                android:elevation="@dimen/margin_5_dp" />

            <LinearLayout
                android:id="@+id/ll_simmer_call_me_dial_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/simmer_connect_voip_btn"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/audio_selection_start_margin_btn"
                android:layout_marginTop="@dimen/audio_selection_layout_margin"
                android:layout_marginEnd="@dimen/audio_selection_start_margin_btn"
                android:layout_marginBottom="@dimen/audio_selection_chkbx_call_btn_margin_btm"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_simmer_call_phone"
                    android:layout_width="@dimen/width_0dp"
                    android:layout_height="@dimen/audio_selection_btn_height"
                    android:layout_marginStart="@dimen/audio_selection_btn_margin_between"
                    android:layout_marginEnd="@dimen/audio_selection_btn_margin_between"
                    android:layout_marginBottom="@dimen/margin_5_dp"
                    android:layout_weight="@integer/weight_1"
                    android:background="@color/grayLight"
                    android:elevation="@dimen/margin_5_dp" />

                <Button
                    android:id="@+id/btn_simmer_dial_in"
                    android:layout_width="@dimen/width_0dp"
                    android:layout_height="@dimen/audio_selection_btn_height"
                    android:layout_marginStart="@dimen/audio_selection_btn_margin_between"
                    android:layout_marginEnd="@dimen/audio_selection_btn_margin_between"
                    android:layout_marginBottom="@dimen/margin_5_dp"
                    android:layout_weight="@integer/weight_1"
                    android:background="@color/grayLight"
                    android:elevation="@dimen/dp_2" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/chkbx_simmer_mute_me"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_simmer_call_me_dial_in"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/audio_selection_start_margin_btn"
                android:layout_marginTop="@dimen/audio_selection_layout_margin"
                android:layout_marginEnd="@dimen/audio_selection_start_margin_btn"
                android:layout_marginBottom="@dimen/audio_selection_chkbx_call_btn_margin_btm"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:layout_width="@dimen/width_0dp"
                    android:layout_height="@dimen/audio_selection_dnt_cnct_btn_btm_height"
                    android:layout_marginStart="@dimen/audio_selection_btn_margin_between"
                    android:layout_marginEnd="@dimen/audio_selection_btn_margin_between"
                    android:layout_marginBottom="@dimen/margin_5_dp"
                    android:layout_weight="@integer/weight_8"
                    android:background="@color/grayLight"
                    android:elevation="@dimen/margin_5_dp" />

                <Button
                    android:layout_width="@dimen/width_0dp"
                    android:layout_height="@dimen/dial_in_close_btn_margin_top"
                    android:layout_marginStart="@dimen/audio_selection_btn_margin_between"
                    android:layout_marginEnd="@dimen/audio_selection_btn_margin_between"
                    android:layout_marginBottom="@dimen/margin_5_dp"
                    android:layout_weight="@integer/weight_2"
                    android:background="@color/grayLight"
                    android:elevation="@dimen/dp_2" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/chkbx_simmer_speaker"
                style="@style/AudioSelectionCheckBox"
                android:layout_below="@+id/chkbx_mute_me"
                android:background="@color/grayLight"
                android:text="@string/activate_speaker"
                android:visibility="gone" />
        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
 