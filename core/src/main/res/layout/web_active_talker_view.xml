<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_meeting"
    android:gravity="center"
    android:paddingTop="@dimen/web_active_talker_top_padding"
    android:orientation="vertical"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_pic_active_talker"
        android:layout_width="@dimen/margin_100_dp"
        android:layout_height="@dimen/margin_100_dp"
        android:layout_marginTop="@dimen/margin_14_dp"
        android:background="@drawable/recents_clear_background_drawable"
        android:gravity="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_gm5_name_initials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_14_dp"
        android:background="@drawable/web_active_talker_circle_drawable"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/web_active_talker_text_size"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/linear_gm5_no_one_spoken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/margin_100_dp"
            android:background="@drawable/avatar"
            android:layout_height="@dimen/margin_100_dp"
            />

        <TextView
            android:id="@+id/tv_gm5_no_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_14_dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="@string/no_one"
            android:textColor="@color/white"
            android:textSize="@dimen/xmedium_text"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_gm5_spoken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10_dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="@string/speaking_string"
            android:textColor="@color/meeting_speaking_text_color"
            android:textSize="@dimen/medium_text"
            android:textStyle="normal" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_gm5_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/web_active_talker_full_name_margin_top"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/web_active_talker_full_name_text_size"
        android:lineSpacingExtra="-3sp"
        android:textStyle="normal"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_gm5_talking_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_16_dp"
        android:layout_marginTop="@dimen/margin_10_dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:textColor="@color/meeting_speaking_text_color"
        android:textSize="@dimen/web_active_talker_talking_state_margin_top"
        android:textStyle="normal"
        android:visibility="invisible" />

</LinearLayout>

