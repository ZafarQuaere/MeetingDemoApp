<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/meeting_security_background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_16"
        android:paddingBottom="@dimen/margin_20_dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_security_option_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_text"
                android:text="@string/enable_waiting_room"
                android:textColor="@color/meeting_security_option_title_text_color"/>

            <TextView
                android:id="@+id/tv_security_option_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:textSize="@dimen/text_14_sp"
                android:text="@string/restrict_sharing_description"
                android:textColor="@color/meeting_security_option_desc_text_color"/>
        </LinearLayout>

        <Switch
            android:id="@+id/sw_security_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_12_dp"
            android:theme="@style/AppTheme.Switch"/>

    </LinearLayout>

    <View style="@style/listDividerVertical"/>
</LinearLayout>
